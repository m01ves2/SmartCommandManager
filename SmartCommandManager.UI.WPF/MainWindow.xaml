<Window x:Class="SmartCommandManager.UI.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SmartCommandManager"
        Height="500"
        Width="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <!-- Output -->
            <RowDefinition Height="*" />
            <!-- Input -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- OUTPUT -->
        <WebBrowser x:Name="OutputBrowser"
                    Grid.Row="0"
                    Margin="0,0,0,10"/>

        <!-- INPUT -->
        <TextBox x:Name="InputTextBox"
                 Grid.Row="1"
                 Height="28"
                 AcceptsReturn="False"
                 FontFamily="Consolas"
                 KeyDown="InputTextBox_OnKeyDown"/>
    </Grid>
</Window>