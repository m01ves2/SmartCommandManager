<Window x:Class="SmartCommandManager.UI.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SmartCommandManager"
        Height="500"
        Width="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Output -->
            <RowDefinition Height="Auto" />
            <!-- Input -->
        </Grid.RowDefinitions>

        <!-- Output -->
        <TextBox x:Name="OutputTextBox"
                 Grid.Row="0"
                 IsReadOnly="True"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"
                 FontFamily="Consolas"
                 Margin="0,0,0,10"/>

        <!-- Input -->
        <TextBox x:Name="InputTextBox"
                 Grid.Row="1"
                 Height="28"
                 AcceptsReturn="False"
                 FontFamily="Consolas"
                 KeyDown="InputTextBox_OnKeyDown"/>
    </Grid>
</Window>